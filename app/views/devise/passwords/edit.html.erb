<h2 class="title">Change your password</h2>

<div class="box">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <div class="control has-icons-left">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input", placeholder: "New password" %>
        <span class="icon is-small is-left">
          <%= icon('fa-solid', 'lock') %>
        </span>
        <% if @minimum_password_length %>
          <em class="help has-text-danger">(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
      </div>
    </div>

    <div class="field">
      <div class="control has-icons-left">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", placeholder: "Confirm new password" %>
        <span class="icon is-small is-left">
          <%= icon('fa-solid', 'lock') %>
        </span>
      </div>
    </div>

    <div class="field actions">
      <div class="control">
        <%= f.submit "Change my password", class: "button is-danger" %>
      </div>
    </div>
  <% end %>
</div>

<div class="buttons is-grouped">
  <%= render "devise/shared/links" %>
</div>
